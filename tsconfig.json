{
  "compilerOptions": {
    "rootDirs": ["api"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2018", "es2020", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "paths": {
      "@shared": ["./shared/"]
    }
  },
  "ts-node": {
    "esm": true
  }
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["./"],
    "paths": {
      "@shared": ["./shared/"]
    },
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2018", "es2020", "esnext.asynciterable", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true
  },
  "references": [{ "path": "../shared" }]
}
